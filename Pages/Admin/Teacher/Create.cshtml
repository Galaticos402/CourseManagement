@page
@model CourseManagement.Pages.Admin.Teacher.CreateModel
@{
}
<h1>Create Student</h1>
<form method="post">
    <div class="d-flex p-2">
        <label>Teacher's Name: </label>
        <input type="text" asp-for="Teacher.TeacherName"  />
        <span class="text-danger" asp-validation-for="Teacher.TeacherName"></span>
    </div>
    <div class="d-flex p-2">
        <label>Email: </label>
        <input type="email" asp-for="Teacher.Email"  />
        <span class="text-danger" asp-validation-for="Teacher.Email"></span>
    </div>
    <div class="d-flex p-2">
        <label>Phone</label>
        <input type="text" asp-for="Teacher.Phone" />
        <span class="text-danger" asp-validation-for="Teacher.Phone"></span>
    </div>
    <div class="d-flex p-2">
        <label>Major: </label>
        <select asp-for="Teacher.MajorId">
            @foreach (var major in Model.Majors)
            {
                <option value="@major.Id">@major.MajorName</option>
            }
        </select>
        <span class="text-danger" asp-validation-for="Teacher.MajorId"></span>
    </div>
    <div>
        <input type="submit" value="Create" />
    </div>

</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}