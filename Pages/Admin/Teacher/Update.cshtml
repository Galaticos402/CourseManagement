@page
@model CourseManagement.Pages.Admin.Teacher.UpdateModel
@{
}
<h1>Update Teacher's Information'</h1>
<form method="post">
    <input type="hidden" name="Id" value="@Model.SelectedTeacher?.Id" />
    <div class="d-flex p-2">
        <label>Student's Name: </label>
        <input type="text" asp-for="SelectedTeacher.TeacherName" value="@Model.SelectedTeacher?.TeacherName" />
        <span class="text-danger" asp-validation-for="SelectedTeacher.TeacherName"></span>
    </div>
    <div class="d-flex p-2">
        <label>Email: </label>
        <input type="email" asp-for="SelectedTeacher.Email"  value="@Model.SelectedTeacher?.Email"    />
        <span class="text-danger" asp-validation-for="SelectedTeacher.Email"></span>
    </div>
    <div class="d-flex p-2">
        <label>Phone</label>
        <input type="text" asp-for="SelectedTeacher.Phone" value="@Model.SelectedTeacher?.Phone"    />
        <span class="text-danger" asp-validation-for="SelectedTeacher.Phone"></span>
    </div>
    <div class="d-flex p-2">
        <label>Major: </label>
        <select asp-for="SelectedTeacher.MajorId">
            @foreach (var major in Model.Majors)
            {
                <option value="@major.Id" selected=@major.Id.Equals(@Model.SelectedTeacher?.MajorId)>@major.MajorName</option>
            }
        </select>
        <span class="text-danger" asp-validation-for="SelectedTeacher.MajorId"></span>
    </div>
    <div>
        <input type="submit" value="Update" />
    </div>

</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}