@page
@model CourseManagement.Pages.Admin.Teacher.UpdateModel
@{
}
<h1>Update Teacher's Information'</h1>
<form method="post">
    <input type="hidden" name="Id" value="@Model.SelectedTeacher?.Id" />
    <div class="d-flex p-2">
        <label>Student's Name: </label>
        <input type="text" name="TeacherName" value="@Model.SelectedTeacher?.TeacherName" />
    </div>
    <div class="d-flex p-2">
        <label>Email: </label>
        <input type="email" name="Email" value="@Model.SelectedTeacher?.Email" "   />
    </div>
    <div class="d-flex p-2">
        <label>Phone</label>
        <input type="text" name="Phone" value="@Model.SelectedTeacher?.Phone" "   />
    </div>
    <div class="d-flex p-2">
        <label>Major: </label>
        <select name="MajorId">
            @foreach (var major in Model.Majors)
            {
                <option value="@major.Id" selected=@major.Id.Equals(@Model.SelectedTeacher?.MajorId)>@major.MajorName</option>
            }
        </select>
    </div>
    <div>
        <input type="submit" value="Update" />
    </div>

</form>