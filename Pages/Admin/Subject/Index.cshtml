@page
@model CourseManagement.Pages.Admin.Subject.IndexModel
@{
}
@{
    var i = 1;
}
<h1>Subject Management</h1>
<div class="mt-2 mb-2">
    <a class="btn btn-warning" href="/Admin/Subject/Create">Add new subject</a>
</div>
<table class="table table-bordered table-striped">
    <tr>
        <th class="align-middle text-center">No</th>
        <th class="align-middle text-center">Subject's Name</th>
        <th class="align-middle text-center">Code</th>
        <th class="align-middle text-center">Major</th>
        <th class="align-middle text-center">###</th>
    </tr>
    @foreach (var subject in Model.Subjects)
    {
        <tr>
            <td class="align-middle text-center">@i</td>
            <td class="align-middle text-center">@Html.DisplayFor(model => subject.SubjectName)</td>
            <td class="align-middle text-center">@Html.DisplayFor(model => subject.Code)</td>
            <td class="align-middle text-center">@Html.DisplayFor(model => subject.Major.MajorName)</td>
            <td>
                <div class="d-grid text-center">

                    <div class="p-2">
                        <a class="btn btn-primary" href="/Admin/Subject/Update?id=@subject.Id">Update</a>
                    </div>


                    <form method="post">
                        <input type="submit" class="btn btn-danger" asp-page-handler="Delete" asp-route-id="@subject.Id" value="Remove" onclick="return confirm('Are you sure you want to delete this?')" />
                    </form>

                    <div class="p-2">
                        <a class="btn btn-success" href="/Admin/Course?subjectId=@subject.Id">View Course</a>
                    </div>

                </div>
            </td>
        </tr>
        i++;
    }



</table>