@page
@model CourseManagement.Pages.Admin.Subject.CreateModel
@{
}
<h1>Create Subject</h1>
<form method="post">
    <div class="d-flex p-2">
        <label>Subject's Name: </label>
        <input type="text" asp-for="Subject.SubjectName" />
        <span class="text-danger" asp-validation-for="Subject.SubjectName"></span>
    </div>
    <div class="d-flex p-2">
        <label>Code: </label>
        <input type="text" asp-for="Subject.Code" />
        <span class="text-danger" asp-validation-for="Subject.Code"></span>
    </div>
    <div class="d-flex p-2">
        <label>Major: </label>
        <select asp-for="Subject.MajorId">
            @foreach (var major in Model.Majors)
            {
                <option value="@major.Id">@major.MajorName</option>
            }
        </select>
        <span class="text-danger" asp-validation-for="Subject.Major"></span>
    </div>
    <div>
        <input type="submit" value="Create" />
    </div>

</form>