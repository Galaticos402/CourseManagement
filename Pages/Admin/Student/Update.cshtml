@page
@model CourseManagement.Pages.Admin.Student.UpdateModel
@{
}
<h1>Update Student's Information'</h1>
<form method="post">
    <input type="hidden" name="Id" value="@Model.SelectedStudent?.Id"  />
    <div class="d-flex p-2">
        <label>Student's Name: </label>
        <input type="text" name="StudentName" value="@Model.SelectedStudent?.StudentName"/>
    </div>
    <div class="d-flex p-2">
        <label>Email: </label>
        <input type="email" name="Email" value="@Model.SelectedStudent?.Email"" />
    </div>
    <div class="d-flex p-2">
        <label>Phone</label>
        <input type="text" name="Phone" value="@Model.SelectedStudent?.Phone"" />
    </div>
    <div class="d-flex p-2">
        <label>Major: </label>
        <select name="MajorId">
            @foreach (var major in Model.Majors)
            {
                <option value="@major.Id" selected=@major.Id.Equals(@Model.SelectedStudent?.MajorId) >@major.MajorName</option>
            }
        </select>
    </div>
    <div>
        <input type="submit" value="Update" />
    </div>

</form>